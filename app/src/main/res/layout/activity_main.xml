<?xml version="1.0" encoding="utf-8"?>

<!--꼭 여기에 id를 지정해야했나? 하는 위젯 부분은 relativelayout 위치 조정하느라 id 지정해둠-->

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
   >

        <LinearLayout
            android:id="@+id/go_to_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:layout_marginTop="2dip"
            android:gravity="center"
            android:padding="10dip"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="8dip"
                android:textColor="#C0BFBF"
                android:textSize="15dp"
                android:id="@+id/main_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_search" />
        </LinearLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#D2D2C8" />


            <LinearLayout
                android:layout_above="@+id/main_tap_map"
                android:id="@+id/list_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ListView
                    android:id="@+id/main_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </ListView>


            </LinearLayout>

            <LinearLayout
                android:layout_above="@+id/boundary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/main_memo"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_weight="3"
                    android:background="#3451DB"
                    android:padding="15dp"
                    android:text="일정을 위한 공간입니다"
                    android:textColor="#FBFBFB"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/tele" />

            </LinearLayout>



        <ImageView
            android:layout_above="@+id/include_mainbar"
            android:id="@+id/boundary"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#D2D2C8" />

            <include
                android:layout_alignParentBottom="true"
                android:id="@+id/include_mainbar"
                layout="@layout/mainbar"
                android:layout_width="match_parent"
                android:layout_height="50dip"/>



        </RelativeLayout>
    </LinearLayout>



